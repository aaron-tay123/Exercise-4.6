package Exercise4_6;


public class RedApple extends Apple {

	private String color;
	
	public RedApple(String name, int q, double p, String c) {
		super(name, q, p);
		color=c;

		
		//System.out.println("Red Apple constructor is invoked");
	}
	public String Color() {
		return color;
	}
	public String printInfo() {
		return "Red apple may be good for heart";
	}
	
	public String toString() {
		return "Color : " + color
				+"\n" +printInfo();
	}

}

